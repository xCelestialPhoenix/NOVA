<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root maxWidth="500.0" resizable="false" title="Help" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png"/>
    </icons>
    <scene>
        <Scene>
            <VBox>
                <VBox prefHeight="200.0" prefWidth="100.0" styleClass="pane-with-border">
                    <Label styleClass="label-bright" text="Work in progress..."/>
                </VBox>
                <HBox alignment="CENTER" styleClass="pane-with-border">
                    <Label fx:id="helpMessage" styleClass="label-bright" text="Label">
                        <HBox.margin>
                            <Insets right="5.0"/>
                        </HBox.margin>
                    </Label>
                    <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                        <HBox.margin>
                            <Insets left="5.0"/>
                        </HBox.margin>
                    </Button>
                    <opaqueInsets>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                    </opaqueInsets>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                    </padding>
                </HBox>
            </VBox>
            <stylesheets>
                <URL value="@DarkTheme.css"/>
                <URL value="@Extensions.css"/>
            </stylesheets>
        </Scene>
    </scene>
</fx:root>
